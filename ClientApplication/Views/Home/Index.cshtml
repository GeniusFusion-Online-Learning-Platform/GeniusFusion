

@{
    Layout = null; // Since this is a standalone page, we remove the layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to GeniusFusion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <img src="~/images/logo-png.png" alt="GeniusFusion Logo" style="max-width: 200px;">
        <h1>Welcome to GeniusFusion</h1>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Redirect to the Login page after 5 seconds
            setTimeout(function () {
                window.location.href = '@Url.Action("Login", "Home")'; // Assuming Home is the controller and Login is the action
            }, 5000); // 5 seconds
        });
    </script>
</body>
</html>
