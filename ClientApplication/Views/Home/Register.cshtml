
<h1>Register</h1>

<form id="registerForm">
    <label for="registerUsername">Username:</label>
    <input type="text" id="registerUsername" name="registerUsername" required><br><br>
    <label for="registerPassword">Password:</label>
    <input type="password" id="registerPassword" name="registerPassword" required><br><br>
    <label for="registerAccessType">Access Type:</label>
    <select id="registerAccessType" name="registerAccessType">
        <option value="Admin">Admin</option>
        <option value="Faculty">Faculty</option>
        <option value="Student">Student</option>
    </select><br><br>
    <input type="submit" value="Register">
</form>

<div>
    <p>Already have an account? <a href="@Url.Action("Login", "Home")">Login here</a>.</p>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/Register.js"></script>
}
