@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Course</h1>

<div>
    <label for="courseId">Enter Course ID:</label>
    <input type="number" id="courseId" name="courseId" />
    <button id="deleteCourseBtn">Delete Course</button>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#deleteCourseBtn').click(function () {
                var courseId = $('#courseId').val();
                if (courseId) {
                    if (confirm("Are you sure you want to delete this course?")) {
                        $.ajax({
                            type: "DELETE",
                            url: "https://localhost:7284/Course/" + courseId,
                            contentType: "application/json",
                            success: function () {
                                alert("Course deleted successfully.");
                            },
                            error: function (xhr, status, error) {
                                console.error("Error deleting course:", xhr.responseText);
                                alert("Error deleting course. Please try again.");
                            }
                        });
                    }
                } else {
                    alert("Please enter a course ID.");
                }
            });
        });
    </script>
}
